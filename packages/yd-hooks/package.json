{
  "name": "@yd-hooks/core",
  "version": "1.0.0",
  "description": "YD Hooks - React hooks library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "http://localhost:4873/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "immer": "^10.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "tsup": "^8.0.1"
  }
}

