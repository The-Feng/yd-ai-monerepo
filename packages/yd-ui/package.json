{
  "name": "@yd-ui/core",
  "version": "1.0.1",
  "description": "YD UI - React UI 组件库",
  "source": "src/index.tsx",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "http://localhost:4873/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "microbundle --external react,react-dom --globals react=React,react-dom=ReactDOM",
    "dev": "microbundle watch --external react,react-dom --globals react=React,react-dom=ReactDOM",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "microbundle": "^0.15.1"
  }
}

